pipeline {
    agent any

    stages {
        stage('Clone repo') {
            steps {
                git url: 'https://github.com/Marianaajpereira/projeto-final-gama-five', branch: 'main'
            }
        }
        stage('Build EC2') {
            steps {
                sh "01-pipeline-jenkins-deploy-ami-k8s/deploy.sh"
            }
        }
        stage('Test Nginx') {
            steps {
                sh "01-pipeline-jenkins-deploy-ami-k8s/test.sh"
            }
        }
        stage('Build AMI') {
            steps {
                sh "01-pipeline-jenkins-deploy-ami-k8s/package-ami.sh"
            }
        }
        stage('Destroy Test EC2') {
            steps {
                sh "01-pipeline-jenkins-deploy-ami-k8s/destroy.sh"
            }
        }
    }
}
